  include_dirs = [
    "include/",
    "//foundation/distributedschedule/dmsfwk/services/dtbschedmgr/include/",
  ]

  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
